<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IcoButton">
        <attr name="backgroundDrawable" format="integer"/>
        <attr name="color" format="color"/>
        <attr name="padding" format="dimension"/>

        <attr name="iconResource" format="integer"/>
        <attr name="iconAlign" format="enum">
            <enum name="leftOfText" value="0"/>
            <enum name="rightOfText" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>

        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>
</resources>